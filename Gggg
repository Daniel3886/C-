#include <iostream>
#include <vector>

using namespace std;

int main() {
    // Wczytywanie macierzy D
    vector<vector<int>> D(3, vector<int>(2));
    cout << "Podaj elementy macierzy D:" << endl;
    for (int i = 0; i < 3; ++i) {
        for (int j = 0; j < 2; ++j) {
            cout << "Podaj element macierzy D[" << i << "][" << j << "]: ";
            cin >> D[i][j];
        }
    }

    // Wypisywanie macierzy D
    cout << "Macierz D:" << endl;
    for (const auto& row : D) {
        for (int element : row) {
            cout << element << " ";
        }
        cout << endl;
    }

    // Obliczanie macierzy G
    vector<vector<int>> G(3, vector<int>(2));
    for (int i = 0; i < 3; ++i) {
        for (int j = 0; j < 2; ++j) {
            G[i][j] = 4 * D[i][j] - 2 * D[i][j];
        }
    }

    // Wypisywanie macierzy G
    cout << "Macierz G:" << endl;
    for (const auto& row : G) {
        for (int element : row) {
            cout << element << " ";
        }
        cout << endl;
    }

    // Zliczanie elementów w macierzy G
    int greater_than_2 = 0, equal_to_2 = 0, less_than_2 = 0;
    for (const auto& row : G) {
        for (int element : row) {
            if (element > 2) {
                greater_than_2++;
            } else if (element < 2) {
                less_than_2++;
            } else {
                equal_to_2++;
            }
        }
    }

    // Wypisywanie wyników
    cout << "Liczba większych od dwa: " << greater_than_2 << endl;
    cout << "Liczba mniejszych od dwa: " << less_than_2 << endl;
    cout << "Liczba równych dwa: " << equal_to_2 << endl;

    return 0;
}
