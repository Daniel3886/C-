#include <iostream>
using namespace std;

const int SIZE = 3; // Rozmiar macierzy

// Funkcja wczytująca macierz
void readMatrix(int matrix[][SIZE]) {
    cout << "Podaj elementy macierzy:" << endl;
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++) {
            cin >> matrix[i][j];
        }
    }
}

// Funkcja wypisująca macierz
void printMatrix(int matrix[][SIZE]) {
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }
}

int main() {
    int D[SIZE][SIZE], E[SIZE][SIZE], G[SIZE][SIZE];
    int countGreater = 0, countLess = 0, countEqual = 0;

    cout << "Wczytaj macierz D:" << endl;
    readMatrix(D);

    cout << "Wczytaj macierz E:" << endl;
    readMatrix(E);

    cout << "Macierz D:" << endl;
    printMatrix(D);

    cout << "Macierz E:" << endl;
    printMatrix(E);

    // Obliczanie macierzy G
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++) {
            G[i][j] = 4 * E[i][j] - 2 * D[i][j];
            // Zliczanie wyrazów
            if (G[i][j] > 2)
                countGreater++;
            else if (G[i][j] < 2)
                countLess++;
            else
                countEqual++;
        }
    }

    cout << "Macierz G:" << endl;
    printMatrix(G);

    cout << "Liczba wyrazów większych od 2: " << countGreater << endl;
    cout << "Liczba wyrazów mniejszych od 2: " << countLess << endl;
    cout << "Liczba wyrazów równych 2: " << countEqual << endl;

    return 0;
}
