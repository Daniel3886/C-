#include <iostream>

using namespace std;

int main() {
    int tab_AR[4][2]; // Tablica 4x2
    char initials[] = "AR"; // Inicjały

    // Wczytywanie danych do tablicy
    for (int j = 0; j < 2; ++j) {
        for (int i = 0; i < 4; ++i) {
            cout << "Podaj element tab_" << initials << " [" << i << "] [" << j << "]: ";
            cin >> tab_AR[i][j];
            
            // Sprawdzanie czy liczba jest parzysta
            if (tab_AR[i][j] % 2 != 0) {
                cout << "Podana liczba musi być parzysta." << endl;
                --i; // Ponowne wczytanie tej samej komórki
            }
        }
    }

    // Wypisywanie zawartości tablicy po wczytaniu danych wierszami
    cout << endl << "Tablica " << initials << ":" << endl;
    for (int i = 0; i < 4; ++i) {
        for (int j = 0; j < 2; ++j) {
            cout << tab_AR[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
