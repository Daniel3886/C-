#include <iostream>

using namespace std;

int main() {
    int tab[5][5];

    // Wypełnianie tablicy
    for (int i = 0; i < 5; ++i) {
        for (int j = 0; j < 5; ++j) {
            if (i == 0 || i == 4) {
                tab[i][j] = 9;
            } else {
                tab[i][j] = i + 1;
            }
        }
    }

    // Wypisywanie tablicy
    for (int i = 0; i < 5; ++i) {
        for (int j = 0; j < 5; ++j) {
            cout << tab[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}

#include <iostream>
#include <vector>

using namespace std;

int main() {
    int month;
    cout << "Podaj miesiąc Twojego urodzenia: ";
    cin >> month;

    int size = 8 + month;

    vector<double> grades(size);

    // Wczytywanie ocen
    cout << "Podaj oceny:" << endl;
    for (int i = 0; i < size; ++i) {
        cout << "podaj " << i + 1 << " ocenę = ";
        cin >> grades[i];
    }

    // Wypisywanie wczytanego ciągu
    cout << "Tablica wprowadzonych ocen: ";
    for (int i = 0; i < size; ++i) {
        cout << grades[i] << " ";
    }
    cout << endl;

    // Obliczanie średniej ocen
    double sum = 0;
    double max_grade = grades[0];
    double min_grade = grades[0];

    for (int i = 0; i < size; ++i) {
        sum += grades[i];
        if (grades[i] > max_grade) {
            max_grade = grades[i];
        }
        if (grades[i] < min_grade) {
            min_grade = grades[i];
        }
    }

    double average = sum / size;

    // Wypisywanie wyników
    cout << "Najlepsza ocena: " << max_grade << endl;
    cout << "Najgorsza ocena: " << min_grade << endl;
    cout << "Średnia " << size << " podanych ocen wynosi: " << average << endl;

    return 0;
}


#include <iostream>

using namespace std;

int main() {
    string nazwisko = "AR"; // Twoje nazwisko
    int month;
    cout << "Podaj miesiąc Twojego urodzenia: ";
    cin >> month;

    int rozmiar = 3 + month;
    int macierz_AR[rozmiar];

    // Wypełnianie tablicy
    for (int i = 0; i < rozmiar; ++i) {
        macierz_AR[i] = i + 4;
    }

    // Wypisywanie zawartości tablicy
    for (int i = 0; i < rozmiar; ++i) {
        cout << "macierz_" << nazwisko << " [" << i << "]=" << macierz_AR[i] << endl;
    }

    return 0;
}


