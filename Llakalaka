#include <iostream>
#include <limits>

int main() {
    const int rows = 5;
    const int cols = 2;

    int macierz[rows][cols];

    // Wczytywanie macierzy
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < cols; ++j) {
            std::cout << "Podaj element a[" << i << "][" << j << "]: ";
            std::cin >> macierz[i][j];
        }
    }

    // Wyświetlanie macierzy wierszami
    std::cout << "\nMacierz:\n";
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < cols; ++j) {
            std::cout << macierz[i][j] << " ";
        }
        std::cout << std::endl;
    }

    // Obliczanie średnich arytmetycznych wierszy
    double srednie[rows];
    for (int i = 0; i < rows; ++i) {
        int suma = 0;
        for (int j = 0; j < cols; ++j) {
            suma += macierz[i][j];
        }
        srednie[i] = static_cast<double>(suma) / cols;
    }

    // Wyszukiwanie elementu maksymalnego i minimalnego
    int maxElement = std::numeric_limits<int>::min();
    int minElement = std::numeric_limits<int>::max();
    int maxIndex = -1;
    int minIndex = -1;

    for (int i = 0; i < rows; ++i) {
        if (srednie[i] > maxElement) {
            maxElement = srednie[i];
            maxIndex = i;
        }
        if (srednie[i] < minElement) {
            minElement = srednie[i];
            minIndex = i;
        }
    }

    // Wyświetlanie wyników
    std::cout << "\nTablica srednich wyglada następująco: ";
    for (int i = 0; i < rows; ++i) {
        std::cout << "A[" << i << "] " << srednie[i] << " ";
    }

    std::cout << "\nMax: A[" << maxIndex << "] = " << maxElement << std::endl;
    std::cout << "Min: A[" << minIndex << "] = " << minElement << std::endl;

    return 0;
}
